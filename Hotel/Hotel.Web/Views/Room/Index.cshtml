﻿
@model IEnumerable<Hotel.Web.Models.Responses.RoomViewResult>

@{
    ViewData["Title"] = "Index";
}



<h1>Rooms</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idRoom)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.idRoomStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idFlat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.creationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.idRoom)
                </td>
                <td>
                    @Html.DisplayFor(model => item.status)
                </td>
                <td>
                    @Html.DisplayFor(model => item.idFlat)
                </td>
                <td>
                    @Html.DisplayFor(model => item.idCategory)
                </td>
                <td>
                    @Html.DisplayFor(model => item.deleted)
                </td>
                <td>
                    @Html.DisplayFor(model => item.number)
                </td>
                <td>
                    @Html.DisplayFor(model => item.details)
                </td>
                <td>
                    @Html.DisplayFor(model => item.price)
                </td>
                <td>
                    @Html.DisplayFor(model => item.status)
                </td>
                <td>
                    @Html.DisplayFor(model => item.creationDate)
                </td>

               <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.idRoom}) |
                    @Html.ActionLink("Details", "Details", new { id=item.idRoom }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.idRoom })
                </td>
            </tr>
        }
    </tbody>
</table>
