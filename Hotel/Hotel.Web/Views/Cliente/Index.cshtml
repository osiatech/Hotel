@model IEnumerable<Hotel.Application.Dtos.Cliente.ClienteDtoGetAll>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TipoDocumento)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TipoDocumento)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Documento)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.IdCliente }) |
                @Html.ActionLink("Details", "Details", new {  id=item.IdCliente }) |
            </td>
        </tr>
}
    </tbody>
</table>
