@model Hotel.Web.Models.Responses.RoomViewResult

@{
    ViewData["Title"] = "Edit";
}

<h1>Room Edit</h1>


<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Code</label>
                <input asp-for="idRoom" class="form-control" />
                <span asp-validation-for="idRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Number</label>
                <input asp-for="number" class="form-control" />
                <span asp-validation-for="number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Details</label>
                <input asp-for="details" class="form-control" />
                <span asp-validation-for="details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <input asp-for="status" class="form-control" />
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label class="control-label">Delete</label>
                <input asp-for="deleted" class="form-control" />
                <span asp-validation-for="deleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="registryDate" class="control-label"></label>
                <input asp-for="registryDate" class="form-control" />
                <span asp-validation-for="registryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}