@model Hotel.Application.Dtos.Recepcion.RecepcionDtoUpdate

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Editar Recepciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Codigo</label>
                <input asp-for="IdRecepcion" class="form-control" readonly />
                <span asp-validation-for="IdRecepcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Fecha de Entrada</label>
                <input asp-for="FechaEntrada" class="form-control" />
                <span asp-validation-for="FechaEntrada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Fecha de Salida</label>
                <input asp-for="FechaSalida" class="form-control" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Confirmacion de la Fecha de Salida</label>
                <input asp-for="FechaSalidaConfirmacion" class="form-control" />
                <span asp-validation-for="FechaSalidaConfirmacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Precio Inicial</label>
                <input asp-for="PrecioInicial" class="form-control" />
                <span asp-validation-for="PrecioInicial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Adelanto</label>
                <input asp-for="Adelanto" class="form-control" />
                <span asp-validation-for="Adelanto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Precio Restante</label>
                <input asp-for="PrecioRestante" class="form-control" />
                <span asp-validation-for="PrecioRestante" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Total Pagado</label>
                <input asp-for="TotalPagado" class="form-control" />
                <span asp-validation-for="TotalPagado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Costo Penalidad</label>
                <input asp-for="CostoPenalidad" class="form-control" />
                <span asp-validation-for="CostoPenalidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Observacion</label>
                <input asp-for="Observacion" class="form-control" />
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Fecha Registro</label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
